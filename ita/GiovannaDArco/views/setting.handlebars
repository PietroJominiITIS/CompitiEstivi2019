<form class="form pt-2" method="post" action="/changePassw">
  <h3 class="pt-5 text-center justify-content-center">Cambia password</h3>
  <div class="form-group row pt-3">
    <div class="col">
      <input type="password" class="form-control" id="inputNewPassw" placeholder="Nuova password" name="newPassw">
    </div>
  </div>
  <div class="form-group row">
    <div class="col text-center">
      <button type="submit" class="btn btn-outline-success">Cambia</button>

        {{#if pChangedStatus.somethignToExpect}}
          {{#if pChangedStatus.pChangedSuccessfully}}
          <small class="pl-2 text-success">
            Password modificata con successo!
          </small>
          {{else}}
          <small class="pl-2 text-danger">
            Please login to change password!
          </small>
          {{/if}}
        {{/if}}
    </div>
  </div>
</form>

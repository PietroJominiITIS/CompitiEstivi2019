<div class="container">
  <h3 class="p-3 text-center justify-content-center">Testi contenenti la parola: {{word}}</h3>
  <ul class="list-group">
    {{#each testi}}
      <li class="list-group-item d-flex justify-content-between align-items-center" style="border-left: 3px solid {{#if this.acc}}#30c553{{else}}#ffbe00{{/if}}">
        <a class="text-primary" href="/testo?id={{this.id}}">
          {{this.title}}
        </a>
        <form class="form-inline" action="/rmText" method="post">
          <button type="submit" name="id" class="btn btn-outline-danger" value="{{this.id}}">Rimuovi</button>
        </form>
      </li>
    {{/each}}
  </ul>
</div>
